<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/white">

    <ImageView
        android:id="@+id/iv_try_again"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/try_again_attention_icon_description"
        android:src="@drawable/ic_info"
        app:layout_constraintBottom_toBottomOf="@id/btn_try_again"
        app:layout_constraintEnd_toStartOf="@id/tv_try_again"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_try_again"
        app:layout_constraintVertical_bias="0.35000002" />

    <TextView
        android:id="@+id/tv_try_again"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:text="@string/error_message_not_possible_to_load_info"
        android:textColor="@color/gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/btn_try_again"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/iv_try_again"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btn_try_again"
        style="@style/LeakedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/error_message_try_again"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_try_again"
        app:layout_constraintTop_toBottomOf="@id/tv_try_again" />

</androidx.constraintlayout.widget.ConstraintLayout>